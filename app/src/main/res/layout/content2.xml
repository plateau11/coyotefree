            android:layout_marginBottom="8dp"/>
        -->
        <!-- File Name Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/edit_filename"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg"
                android:hint="@string/Filename"
                android:textSize="16sp"
                android:textColor="#2E3A59"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:padding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Browse"
                android:layout_marginLeft="8dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                app:cornerRadius="8dp"
                android:padding="12dp"/>
        </LinearLayout>


        <!--<CheckBox android:id="@+id/checkbox_meat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete original file"
            android:visibility="visible"
            android:layout_marginBottom="10dp"/>
            -->

        <!-- Linear progress indicator -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_marginBottom="30dp"
            android:id="@+id/lpi"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_encrypt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lock"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="30dp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF4081"
                    app:cornerRadius="8dp"
                    android:padding="12dp"/>

                <!-- History Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ViewLock"
                    android:textColor="#EEEFF2"
                    android:backgroundTint="#003204"
                    android:padding="12dp"
                    app:cornerRadius="8dp"/>
        </LinearLayout>

        <!-- Floating Chatbot Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/chatbot_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coyote_icon"
            android:contentDescription="Chatbot"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            app:tint="@null"
            app:maxImageSize="40dp" />

</LinearLayout>


