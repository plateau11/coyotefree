<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked State -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <!-- Background Circle -->
                <shape>
                    <solid android:color="#FBF9F9" />
                    <stroke android:width="1dp" android:color="#0F0F10" />
                     <!-- Checked state color -->
                    <corners android:radius="20dp" /> <!-- Decreased radius to make the checkbox smaller -->
                    <size android:width="24dp" android:height="24dp"/> <!-- Make the checkbox smaller and circular -->
                </shape>
            </item>
            <item>
                <!-- Image (Tick Mark) -->
                <bitmap
                    android:src="@drawable/check4"

                    android:width="8dp"
                    android:height="8dp" />
            </item>
        </layer-list>
    </item>

    <!-- Unchecked State -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Unchecked state color -->
            <stroke android:width="1dp" android:color="#121212" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="20dp" /> <!-- Ensure same radius for a full circle -->
            <size android:width="24dp" android:height="24dp"/> <!-- Ensure the unchecked box is the same size -->
        </shape>
    </item>
</selector>
