<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

        <!-- File Type Label -->
        <TextView
            android:id="@+id/filetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SelectFile"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <!-- Error Message -->
        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select an option."
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone" />

        <!-- File Type Selection (Radio Buttons) -->
        <RadioGroup
            android:id="@+id/groupradio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/radio_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/PhotosVideos"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radio_doc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Documents"
                    android:textSize="20sp" />
        </RadioGroup>

        <!-- File Mode Selection (Single / Multiple) -->
        <LinearLayout
            android:id="@+id/checkbox_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:paddingStart="10dp">

                <CheckBox
                    android:id="@+id/checkbox_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Single File"
                    android:textSize="16sp"
                    android:layout_marginEnd="30dp" />

                <CheckBox
                    android:id="@+id/checkbox_multiple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Multiple Files"
                    android:textSize="16sp" />
        </LinearLayout>

        <!-- File Name Input and Browse Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/edit_filename"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:hint="@string/Filename"
                    android:textSize="16sp"
                    android:textColor="#2E3A59"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:padding="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Browse"
                    android:layout_marginLeft="8dp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"
                    app:cornerRadius="8dp"
                    android:padding="12dp" />
        </LinearLayout>

        <!-- Progress Indicator -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/lpi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_marginBottom="30dp" />

        <!-- Action Buttons: Encrypt / View History -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_encrypt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Lock"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="30dp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF4081"
                    app:cornerRadius="8dp"
                    android:padding="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ViewLock"
                    android:textColor="#EEEFF2"
                    android:backgroundTint="#003204"
                    android:padding="12dp"
                    app:cornerRadius="8dp" />
        </LinearLayout>

        <!-- Floating Chatbot Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/chatbot_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coyote_icon"
            android:contentDescription="Chatbot"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            app:tint="@null"
            android:visibility="gone"
            app:maxImageSize="40dp" />

</LinearLayout>
